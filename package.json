{
  "name": "clone-tabnews",
  "version": "1.0.0",
  "description": "This repository is a clone of tabnews.com.br. It is part of the course.dev studies.",
  "main": "index.js",
  "scripts": {
    "dev": "yarn services:up && yarn services:wait:database && yarn migrations:up && next dev && yarn services:stop",
    "test": "yarn services:up && concurrently -n next,jest --hide next -k -s command-jest \"next dev\" \"jest --runInBand --verbose\" && yarn services:stop",
    "test:watch": "jest --watchAll --runInBand --verbose",
    "services:up": "docker compose -f infra/compose.yaml up -d",
    "services:stop": "docker compose -f infra/compose.yaml stop",
    "services:down": "docker compose -f infra/compose.yaml down",
    "services:wait:database": "node infra/scripts/wait-for-postgres.js",
    "migrations:create": "node-pg-migrate -m infra/migrations create",
    "migrations:up": "node-pg-migrate -m infra/migrations --envPath .env.development up",
    "migrations:down": "node-pg-migrate -m infra/migrations --envPath .env.development down",
    "lint:prettier:check": "prettier --check .",
    "lint:prettier:fix": "prettier --write .",
    "lint:eslint:check": "next lint --dir .",
    "prepare": "husky"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gabrielbsandim/clone-tabnews.git"
  },
  "author": "Gabriel Bastos Sandim",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/gabrielbsandim/clone-tabnews/issues"
  },
  "homepage": "https://github.com/gabrielbsandim/clone-tabnews#readme",
  "dependencies": {
    "async-retry": "^1.3.3",
    "dotenv": "^17.2.2",
    "dotenv-expand": "^12.0.3",
    "next": "^15.5.3",
    "node-pg-migrate": "7.9.1",
    "pg": "^8.16.3",
    "react": "^19.1.1",
    "react-dom": "^19.1.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "concurrently": "^9.2.1",
    "eslint": "^9.35.0",
    "eslint-config-next": "15.5.3",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-jest": "^29.0.1",
    "husky": "^9.1.7",
    "jest": "^30.1.3",
    "prettier": "^3.6.2"
  },
  "packageManager": "yarn@4.9.4"
}
